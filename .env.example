# ============================================
# CareerCanvas Environment Variables
# نسخة مثال - قم بنسخ هذا الملف إلى .env وتعديل القيم
# ============================================

# ============================================
# Database Configuration (MySQL)
# ============================================
DATABASE_URL=mysql://username:password@localhost:3306/careercanvas

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000
# 86400000 = 24 hours in milliseconds

# ============================================
# Security Configuration
# ============================================
# CORS Settings
CORS_ORIGIN=https://yourdomain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 900000 = 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Super Admin Configuration
# ============================================
SUPER_ADMIN_EMAIL=superadmin@yourdomain.com
SUPER_ADMIN_PASSWORD=ChangeThisStrongPassword123!
SUPER_ADMIN_NAME=Super Administrator

# ============================================
# Email Configuration (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=CareerCanvas

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
# 10485760 = 10MB in bytes
UPLOAD_DIR=./public/uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# ============================================
# Media Storage (Optional - for cloud storage)
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# Redis Configuration (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ============================================
# Analytics & Monitoring
# ============================================
# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# Social Media Integration
# ============================================
# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Twitter/X
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Push Notifications (Optional)
# ============================================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@yourdomain.com

# ============================================
# Payment Gateway (Optional)
# ============================================
# Stripe
STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxx

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=live
# live or sandbox

# ============================================
# API Keys (Third-party services)
# ============================================
# OpenAI (for AI features)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxx

# Recaptcha (for spam protection)
RECAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SECRET_KEY=your-secret-key

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
# Cron format: Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
# debug, info, warn, error
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ============================================
# Feature Flags
# ============================================
FEATURE_COMMENTS_ENABLED=true
FEATURE_REACTIONS_ENABLED=true
FEATURE_POLLS_ENABLED=true
FEATURE_LIVE_STREAMING_ENABLED=false
FEATURE_AI_CONTENT_SUGGESTIONS=false
FEATURE_ADVANCED_ANALYTICS=true

# ============================================
# Performance Configuration
# ============================================
# Cache TTL (Time To Live) in seconds
CACHE_TTL=3600
# 3600 = 1 hour

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Maintenance Mode
# ============================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing maintenance. Please check back soon.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# ============================================
# SEO Configuration
# ============================================
SITE_NAME=CareerCanvas
SITE_URL=https://yourdomain.com
SITE_DESCRIPTION=Professional Content Management System
DEFAULT_OG_IMAGE=https://yourdomain.com/og-image.jpg

# ============================================
# Localization
# ============================================
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en
TIMEZONE=Asia/Riyadh

# ============================================
# Development Only (Remove in production)
# ============================================
# DEBUG_MODE=false
# MOCK_DATA_ENABLED=false
